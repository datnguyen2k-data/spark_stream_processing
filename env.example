# Kafka Source Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=stream-events
KAFKA_GROUP_ID=spark-stream-group
KAFKA_VALUE_FORMAT=json
# KAFKA_VALUE_FORMAT có thể là: json, avro, protobuf
# Nếu dùng avro hoặc protobuf, cần cấu hình KAFKA_SCHEMA_REGISTRY_URL
KAFKA_SCHEMA_REGISTRY_URL=

# ClickHouse Sink Configuration (optional - cấu hình nếu muốn dùng ClickHouse)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_DATABASE=default
CLICKHOUSE_TABLE=stream_events
CLICKHOUSE_USER=
CLICKHOUSE_PASSWORD=

# PostgreSQL Sink Configuration (optional - cấu hình nếu muốn dùng PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=stream_db
POSTGRES_TABLE=stream_events
POSTGRES_USER=postgres
POSTGRES_PASSWORD=

# Iceberg Sink Configuration (optional - cấu hình nếu muốn dùng Iceberg)
ICEBERG_DATABASE=stream_db
ICEBERG_TABLE=stream_events
ICEBERG_CATALOG=spark_catalog
ICEBERG_WAREHOUSE=/tmp/iceberg-warehouse

# Spark Configuration
BATCH_INTERVAL_SECONDS=10
CHECKPOINT_LOCATION=/tmp/spark-checkpoint

